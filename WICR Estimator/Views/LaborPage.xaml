        </Grid>
        <Grid Grid.Row="1" Margin="10,2,2,2"
             Background="AliceBlue" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                
            </Grid.ColumnDefinitions>
            <ListBox VerticalAlignment="Center" Background="AliceBlue">
                
                <ListBoxItem HorizontalAlignment="Center"
                             FontWeight="Bold">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Items" Width="120" 
                               HorizontalAlignment="Stretch"
                               FontWeight="Bold"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Sloping" Width="120" 
                               HorizontalAlignment="Stretch"
                               />
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Metal" Width="120" 
                               HorizontalAlignment="Stretch"
                               />
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="System &amp; Other Costs"
                                   Width="120"
                               HorizontalAlignment="Stretch"
                               />
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center" >
                    
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,2">
                        <TextBlock Text="Sub Contract Labor"
                                   Width="120"
                               HorizontalAlignment="Stretch"
                               />
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center"
                             FontWeight="Bold" Margin="0,5,0,0">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,0">
                        <TextBlock Text="Total Sales" Width="120" 
                               HorizontalAlignment="Stretch"
                               FontWeight="Bold"/>
                    </Border>
                </ListBoxItem>
            </ListBox>
            <ListBox VerticalAlignment="Center"  Background="AliceBlue"
                     Grid.Column="1">
                <ListBoxItem >
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Labor" HorizontalAlignment="Stretch"
                               FontWeight="Bold" Width="100"
                           />
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" 
                            HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock  HorizontalAlignment="Stretch"
                                     Width="100"
                        Text="{Binding SlopeTotals.LaborExtTotal}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock HorizontalAlignment="Stretch"
                                    Width="100"
                        Text="{Binding MetalTotals.LaborExtTotal}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="{Binding TotalLaborExtension}"
                                    Width="100"
                               HorizontalAlignment="Stretch"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,2">
                        <TextBlock HorizontalAlignment="Stretch" Width="100"
                        Text="{Binding TotalSubcontractLabor}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center"  Margin="0,5,0,0">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,0">
                        <TextBlock HorizontalAlignment="Stretch" Width="100"
                                   FontWeight="Bold"
                        Text="{Binding AllTabsLaborTotal,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
            </ListBox>
            <ListBox VerticalAlignment="Center"  Background="AliceBlue"
                     Grid.Column="2">
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Material"  Width="100"
                           HorizontalAlignment="Stretch"
                               FontWeight="Bold"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding SlopeTotals.MaterialExtTotal}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding MetalTotals.MaterialExtTotal}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding TotalMaterialCostbrkp}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,2">
                        <TextBlock  Width="100" Text="{Binding TotalSubcontractLabor}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center"  Margin="0,5,0,0">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,0">
                        <TextBlock HorizontalAlignment="Stretch" Width="100"
                                   FontWeight="Bold"
                        Text="{Binding AllTabsMaterialTotal,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
            </ListBox>
            <ListBox VerticalAlignment="Center"  Background="AliceBlue"
                     Grid.Column="3">
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Freight"
                           HorizontalAlignment="Stretch"
                               Width="100" FontWeight="Bold"/>
                    </Border>
                    
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100"
                            Text="{Binding SlopeTotals.MaterialFreightTotal}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding MetalTotals.MaterialFreightTotal}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding TotalFreightCostBrkp}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,2">
                        <TextBlock Width="100"
                            Text="{Binding TotalSubContractLaborCostBrkp}"/>
                    </Border>
                    
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center"  Margin="0,5,0,0">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,0">
                        <TextBlock HorizontalAlignment="Stretch" Width="100"
                                   FontWeight="Bold"
                        Text="{Binding AllTabsFreightTotal,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
            </ListBox>
            <ListBox VerticalAlignment="Center"  Background="AliceBlue"
                     Grid.Column="4">
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Total Sales"
                           HorizontalAlignment="Stretch"
                               Width="100" FontWeight="Bold"/>
                    </Border>

                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100"
                            Text="{Binding TotalSlopingPrice,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding TotalMetalPrice,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,1">
                        <TextBlock Width="100" Text="{Binding TotalSystemPrice,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,2">
                        <TextBlock Width="100"
                            Text="{Binding TotalSubcontractLabor,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
                <ListBoxItem HorizontalAlignment="Center"  Margin="0,5,0,0">
                    <Border BorderBrush="Black" HorizontalAlignment="Stretch"
                            BorderThickness="0,0,0,0">
                        <TextBlock HorizontalAlignment="Stretch" Width="100"
                                   FontWeight="Bold"
                        Text="{Binding TotalSale,StringFormat='c'}"/>
                    </Border>
                </ListBoxItem>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
