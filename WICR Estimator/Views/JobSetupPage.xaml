<UserControl x:Class="WICR_Estimator.Views.JobSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WICR_Estimator.Views"
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      xmlns:conv="clr-namespace:WICR_Estimator.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="500" d:DesignWidth="1000"
      >
    <UserControl.Resources>
        <conv:HasFieldEdited x:Key="HasFieldEdited"/>
        <Style x:Key="FieldHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style  BasedOn="{StaticResource MaterialDesignFilterChipCheckBox}" TargetType="{x:Type CheckBox}">
            <Setter Property="Height" Value="40"/>
            <!--<Setter Property="FontSize" Value="14"MaterialDesignFilterChipCheckBoxMaterialDesignAccentCheckBox  />
            
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>-->
        </Style>
        <Style x:Key="RBxStyle" TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="TextBoxStyle" BasedOn="{StaticResource  MaterialDesignOutlinedTextFieldTextBox}" TargetType="{x:Type TextBox}" >
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0,5,10"/>
            <!--<Setter Property="Height" Value="40"/>-->
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style.Triggers>
                
                    <Trigger Property="IsEnabled" Value="True">
                        <Setter Property="Background" Value="{StaticResource   AccentColorBrush4}" />
                    <Setter Property="ToolTip" Value="Please enter a numeric value."/>
                </Trigger>
                <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource Self},
                                       Converter={StaticResource HasFieldEdited} }" 
                             Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Background" Value="{StaticResource PrimaryHueDarkBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource PrimaryHueDarkForegroundBrush}" />
                </DataTrigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Background" Value="{StaticResource PrimaryHueLightBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource PrimaryHueLightForegroundBrush}" />
                </Trigger>
            </Style.Triggers>
            
        </Style>
    </UserControl.Resources>
    <Grid  Margin="-1,0,1,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            
        </Grid.ColumnDefinitions>
        <materialDesign:Card UniformCornerRadius="5" Width="300"
                             Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <!--<Border BorderThickness="0" BorderBrush="Black"
                Background="AliceBlue"
                Margin="10"
                Padding="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#82000000" />
                </Border.Effect>-->
                <StackPanel HorizontalAlignment="Stretch" Margin="5">
                    <materialDesign:Card Padding="10" UniformCornerRadius="5"
                             Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                        <DatePicker Margin="5" Height="30"
                            FontSize="14"
                            SelectedDate="{Binding SelectedDate, Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged,
                            TargetNullValue={x:Static System:DateTime.Now}}"                           
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Left"/>
                    </materialDesign:Card>
                <materialDesign:Card Padding="10" UniformCornerRadius="5"
                             Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <StackPanel>
                        <TextBlock Margin="5,0" FontWeight="SemiBold"
                       Text="Project Start Date"/>
                        <ComboBox Text="{Binding ProjectDelayFactor,UpdateSourceTrigger=PropertyChanged}" 
                          Width="180" HorizontalAlignment="Left"
                          Margin="5,0,0,0">
                            <ComboBoxItem Content="0-3 Months" IsSelected="True"/>
                            <ComboBoxItem Content="3-6 Months"/>
                            <ComboBoxItem Content="6-12 Months"/>
                            <ComboBoxItem Content=">12 Months"/>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Padding="10" UniformCornerRadius="5"
                             Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <StackPanel>
                        <TextBlock Margin="10" FontWeight="SemiBold"
                       Text="Metal Material Type"/>
                        <ComboBox Text="{Binding MaterialName,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"
                          Margin="10,0,0,10"
                          
                          Width="180">
                            <ComboBoxItem Content="16oz Copper"/>
                            <ComboBoxItem Content="24ga. Galvanized Primed Steel" 
                                  IsSelected="True"/>
                            <ComboBoxItem Content="26 ga. Type 304 Stainless Steel"/>
                        </ComboBox>
                    </StackPanel>
                    
                </materialDesign:Card>
                <materialDesign:Card Padding="10" UniformCornerRadius="5"
                             Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <StackPanel>
                        <TextBlock  Margin="10" FontWeight="SemiBold" 
                       Text="Metal Vendor Name"/>
                        <ComboBox Width="180" HorizontalAlignment="Left"
                          Margin="10,0,0,10"
                          Text="{Binding VendorName,UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem Content="Chivon"/>
                            <ComboBoxItem Content="Thunder Bird"/>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card Padding="10" UniformCornerRadius="5"
                             Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold"
                           Margin="5,10,10,0" Text="Work Area"/>
                        <TextBox Margin="5,0,5,0"
                         ToolTip="Enter unique workarea for each projects."
                         
                         Text="{Binding WorkArea,UpdateSourceTrigger=LostFocus}"
                         VerticalContentAlignment="Center"/>
                        <TextBlock 
                           Margin="5,30,10,0" FontWeight="SemiBold"
                       Text="NOTE:DIFFERENT PRODUCT USED"/>
                        <TextBox Margin="5,0,5,0" Height="30"
                         MaxLength="20"
                         Text="{Binding SpecialProductName,UpdateSourceTrigger=LostFocus}"
                         VerticalContentAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card UniformCornerRadius="5" Padding="10"
                                     Background="{StaticResource PrimaryHueDarkBrush}"
                             Margin="10,20" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel HorizontalAlignment="Center" >
                        <TextBlock Text="Total Sale"  HorizontalAlignment="Left"
                                   FontSize="18"
                           FontWeight="Bold"/>
                        <TextBlock FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryHueLightBrush}"
                            Text="{Binding TotalSalesCostTemp,StringFormat=N2}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>
                <!--<Button Background="White"
                            Margin="15,40,15,15"
                            Height="35"
                            FontSize="15"                        
                            ToolTip="Apply Changes"                            
                            Command="{Binding ApplyChangesCommnad}" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe UI Symbol"
