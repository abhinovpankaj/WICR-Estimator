                            <StackPanel Visibility="{Binding IsSqftConcreteVisible}">
                                <TextBlock FontWeight="SemiBold" Margin="5,2"
                       Text="{Binding SqftLabel}"/>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding TotalSqft,UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Visibility="{Binding IsSqftVerticleVisible}">
                                <TextBlock FontWeight="SemiBold" Margin="5,2"
