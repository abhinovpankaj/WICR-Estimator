<UserControl x:Class="WICR_Estimator.Views.JobSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WICR_Estimator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="1000"
      >
    <UserControl.Resources>
        <Style x:Key="FieldHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0,5,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>

        </Style>
    </UserControl.Resources>
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="Black"
                Background="AliceBlue"
                Margin="10"
                Padding="0,0,0,15">
            <StackPanel HorizontalAlignment="Stretch" Margin="5">
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Weather Wear Type"
                           />
                <ComboBox Text="{Binding WeatherWearType}" Width="180"
                          HorizontalAlignment="Left"
                          Margin="5,0,0,0">
                    <ComboBoxItem Content="Weather Wear"/>
                    <ComboBoxItem Content="Weather Wear Rehab"/>
                </ComboBox>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Metal Material Type"/>
                <ComboBox Text="{Binding MaterialName}" HorizontalAlignment="Left"
                          Margin="5,0,0,0"
                          Width="180">
                    <ComboBoxItem Content="16oz Copper"/>
                    <ComboBoxItem Content="24ga. Galvanized Primed Steel"/>
                    <ComboBoxItem Content="26 ga. Type 304 Stainless Steel"/>
                </ComboBox>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Metal Vendor Name"/>
                <ComboBox Width="180" HorizontalAlignment="Left"
                          Margin="5,0,0,0"
                          Text="{Binding VendorName,UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Content="Chivon"/>
                    <ComboBoxItem Content="Thunder Bird"/>
                </ComboBox>
                <TextBlock Style="{StaticResource FieldHeader}"
                           Margin="5,30,10,0"
                       Text="NOTE:DIFFERENT PRODUCT USED"/>
                <TextBox Margin="5,0,5,0" Height="30"
                         Text="{Binding SpecialProductName,UpdateSourceTrigger=LostFocus}"
                         VerticalContentAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Background="LightGray"
                            Margin="0,30,0,0" Visibility="Hidden"
                            >
                    <TextBlock Text="Labor Rate" 
                           Style="{StaticResource FieldHeader}">
                    </TextBlock>
                    <TextBlock Text="{Binding LaborRate}" 
                               IsEnabled="False"
                               FontWeight="SemiBold"
                               
                               Style="{StaticResource FieldHeader}">
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            

        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Column="1"
                Background="AliceBlue"
                Margin="10"
                Width="350"
                Padding="0,0,0,15">
            <StackPanel>
            <StackPanel>
                <CheckBox Style="{StaticResource CheckBoxStyle}"
                          IsChecked="{Binding IsApprovedForSandCement}"
                          Content="Approved for Sand &amp; Cement?"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           Content="Prevailing Wages"
                           IsChecked="{Binding IsPrevalingWage}"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding IsFlashingRequired}"
                           Content="Metal Flashing Over Concrete?"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding HasSpecialPricing}"
                       Content="Special Material Pricing"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding HasDiscount}"
                       Content="Labor Discount Large Project (over 1,000 sq. ft.)"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding HasContingencyDisc}">
                        <TextBlock Text="Contingency Discount for Large New Construction Project (over 1,000 sq. ft.)"
                                       TextWrapping="Wrap"/>
                </CheckBox>
                </StackPanel>
                <Border BorderBrush="Black"
                        BorderThickness="0,1,0,0">
                    <StackPanel VerticalAlignment="Center"
                   Grid.Row="4" Grid.Column="1"
                   Margin="5">
                        <TextBlock Text="Stair Width" HorizontalAlignment="Center"
                           Style="{StaticResource FieldHeader}"/>
                        <TextBox Text="{Binding ElementName=slWidth,
                Path=Value, UpdateSourceTrigger=PropertyChanged}"
                     TextAlignment="Right"
                     Width="40" 
                         HorizontalAlignment="Center"
                     Margin="5"/>
                        <Slider Maximum="10" Value="{Binding StairWidth}"
                                Width="250"
                    TickPlacement="BottomRight"
                    TickFrequency=".5" IsSnapToTickEnabled="True" Name="slWidth"
                    />
                    </StackPanel>
                </Border>
            
            </StackPanel>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Background="AliceBlue"
                Grid.Column="2"
                Margin="10"
                Padding="0,0,0,15">
            <StackPanel>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Total Sq Ft"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding TotalSqft}"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="{Binding DeckLabel}"
                           />
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding DeckPerimeter }"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Stair Risers - Confirm stair width"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding RiserCount}"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="# Decks"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding DeckCount}"/>
                <!--<TextBlock Style="{StaticResource FieldHeader}"
                       Text="Mark Up % "/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding MarkupPercentage}"/>-->
                <StackPanel VerticalAlignment="Center"
                   
                   Margin="5">
                    <TextBlock Text="Mark Up %" HorizontalAlignment="Left"
                           Style="{StaticResource FieldHeader}"/>
                    <TextBox Text="{Binding ElementName=markup,
                             Path=Value, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Right"
                             Width="40" 
                             HorizontalAlignment="Left"
                             Margin="5"/>
                    <Slider Value="{Binding MarkupPercentage}" Maximum="100"
                            Width="250" x:Name="markup"
                            Minimum="{Binding MinMarkUp}"
                            LargeChange="5"
                            SmallChange="0.5"
                            TickPlacement="BottomRight"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            />
                </StackPanel>
                <CheckBox Content="Enter less than (-10%)"
                          Margin="10" x:Name="cbpasswordSection"
                          Foreground="#FF2A6DCD"
                          IsChecked="{Binding AllowMoreMarkUp}">
                </CheckBox>
                <TextBlock Text="{Binding LoginMessage}"
                           Margin="10,0,0,0" Foreground="Red"/>
                <StackPanel Visibility="{Binding HidePasswordSection}">
                    <TextBlock Margin="10,0,0,0" Text="Enter Password"
                               Foreground="#FF2A6DCD"/>
                    <PasswordBox x:Name="passwordbox" Margin="10" Width="140"
                                 HorizontalAlignment="Left"/>
                    <Button HorizontalAlignment="Left" Content="OK"
                            Margin="10,0,0,0"
                            Command="{Binding EnableMoreMarkupCommand}" 
                            CommandParameter="{Binding ElementName=passwordbox}"/>
                    <!--<StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=cbpasswordSection,
                                    Path=IsChecked}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>-->
                </StackPanel>
            </StackPanel>   
        </Border>
              
        
        <!--<StackPanel Orientation="Horizontal"
                    Grid.Row="5" Grid.Column="2"
                    HorizontalAlignment="Right">
            <Button Style="{DynamicResource NavigateButton}"
                    Margin="10,0,10,0"
                    Height="40"
                    Click="Button_Click">
                <Image Source="/Images/rightArrow.png" />
            </Button>
        </StackPanel>-->
        
    </Grid>
</UserControl>
