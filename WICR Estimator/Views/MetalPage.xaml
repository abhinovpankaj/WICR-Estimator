<UserControl x:Class="WICR_Estimator.Views.MetalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WICR_Estimator.Views"
             xmlns:conv="clr-namespace:WICR_Estimator.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="700">
    <UserControl.Resources>
        <conv:CheckBoxVisibilityConverter x:Key="checkBoxConv"/>
        <conv:EnableTextboxConverter x:Key="textboxConv"/>

        <!--<Style TargetType="DataGridCell" x:Key="GridStyleCell">
                        <Style.Triggers>
                            -->
        <!-- Highlight selected rows (standard)-->
        <!--
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#CD000000" />
                                <Setter Property="BorderBrush" Value="#CD000000" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>

                        -->
        <!--Make cells non-selectable-->
        <!--
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="IsTabStop" Value="False"/>
                        </Style>-->

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>

            <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left"
                  Name="MetalGrid" VerticalAlignment="Top"
                  Margin="10"
                  CanUserAddRows="false"
                  ItemsSource="{Binding Metals}">
                <DataGrid.Columns>
                    <!--<DataGridTextColumn Header="Metal Type" IsReadOnly="True"
                                    Binding="{Binding Name}"/>-->
                    <DataGridTemplateColumn FocusManager.IsFocusScope="False">
                        <DataGridTemplateColumn.Header>
                            <TextBlock Text="Material Name"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="includeMe" Visibility="{Binding Name,
                                    Converter={StaticResource checkBoxConv}}"
                                          IsChecked="{Binding IsStairMetal,UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!--<DataGridTextColumn Header="Units" 
                                    Binding="{Binding Units}"/>-->
                    <DataGridTemplateColumn Header="Units">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Units,UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding Name,Converter={StaticResource textboxConv}}">

                                </TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding SpecialMetalPricing ,StringFormat={}{0:C} }"
                                    IsReadOnly="False">
                        <DataGridTextColumn.Header >
                            <!--07-10-18-->
                            <TextBlock Text="Special Material Pricing($)" 
                                   TextWrapping="Wrap"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <!--07-10-18-->
                    <DataGridTextColumn Header="Labor Extension($)"
                                        IsReadOnly="True" 
                                        Binding="{Binding LaborExtension  ,StringFormat={}{0:C}}"/>
                    <!--07-10-18-->
                    <DataGridTextColumn Header="Material Extension($)"
                                    IsReadOnly="True"
                                    Binding="{Binding MaterialExtension ,StringFormat={}{0:C}}"/>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>

        <StackPanel Grid.Column="1">
            <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left"
                      Name="MiscMetalGrid" VerticalAlignment="Top"
                      Margin="0,10,10,10"
                      Grid.Column="1"
                      CanUserAddRows="false"
                      
                  ItemsSource="{Binding MiscMetals,UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Description Of Misc Metal" 
                                    IsReadOnly="True"
                                    Binding="{Binding Name}"/>
                    <!--<DataGridTextColumn Header="Units"
                                    IsReadOnly="{Binding IsReadOnly,Source= MiscMetals}"
                                    Binding="{Binding Units}"/>-->
                    <DataGridTemplateColumn Header="Units">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Units,UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding Name,Converter={StaticResource textboxConv}}">

                                </TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!--<DataGridTextColumn Header="Unit Price"
                                    IsReadOnly="{Binding IsReadOnly}"
                                    Binding="{Binding UnitPrice}"/>-->
                    <DataGridTemplateColumn Header="Unit Price">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding UnitPrice,UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding Name,Converter={StaticResource textboxConv}}">

                                </TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Material Price($)" 
                                        IsReadOnly="{Binding IsReadOnly}"
                                        Binding="{Binding MaterialPrice ,StringFormat={}{0:C}}"/>
                    <DataGridTextColumn Header="Labor Extension($)" 
                                        IsReadOnly="True"
                                        Binding="{Binding LaborExtension,Mode=OneWay ,StringFormat={}{0:C}}"/>

                    <DataGridTextColumn Header="Material Extension($)"
                                    IsReadOnly="True"
                                    Binding="{Binding MaterialExtension,Mode=OneWay,StringFormat={}{0:C}}"/>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
        <GroupBox Header="Total All Metals"
                  Grid.Row="1" FontSize="16"
                  BorderBrush="Black" Margin="5"
                  HorizontalAlignment="Center" Width="350">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="59.957"/>
                    <ColumnDefinition Width="177.043"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="3">
                    <TextBlock Text="Metal Type" Margin="5"/>
                    <TextBlock Text="Labor Total Cost" Margin="5"/>
                    <TextBlock Text="Material Total Cost"  Margin="5"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBox Text="{Binding MetalName}" Background="LightGray"
                       Margin="5" IsEnabled="False"/>
                    <!--07-10-18-->
                    <TextBox IsEnabled="False"  Margin="5"
                             Text="{Binding TotalLaborCost,UpdateSourceTrigger=PropertyChanged ,StringFormat={}{0:C}}"/>
                    <TextBox IsEnabled="False"  Margin="5"
                            Text="{Binding TotalMaterialCost,UpdateSourceTrigger=PropertyChanged  ,StringFormat={}{0:C}}" />
                    <!--07-10-18-->
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Nails, caulk + overage on metal Percentage"
                  Grid.Row="1" Grid.Column="1" FontSize="16" Height="70"
                  BorderBrush="Black" Margin="5" BorderThickness="0.5"
                  HorizontalAlignment="Center" Width="350">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="54.638"/>
                    <ColumnDefinition Width="5.362"/>
                    <ColumnDefinition Width="177.043"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="3">

                    <TextBox Text="{Binding Nails, StringFormat='\{0\}%'}" Background="LightGray"
                       Margin="5" IsEnabled="False" />

                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Column="2" Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button  Background="White" HorizontalAlignment="Right"
                    Margin="5,0,2,0"
                    Height="30"
                    Command="{Binding AddRowCommand}" >
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <!--<TextBlock Text="Add" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,5,0"/>-->
                        <Image Source="../Images/Plus.ico"
                               Height="25"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Command="{Binding RemoveCommand}"
                  
                    Height="30"
                    Background="White"
                    HorizontalAlignment="Right"
                    Margin="0,0,2,0">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">

                        <Image Source="../Images/Minus.ico"
                               Height="25"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button Command="{Binding CalculateCostCommand}"
                    
                    Height="30"
                    Width="100" Background="White"
                    HorizontalAlignment="Right"
                    Margin="30,10,10,10" 
                     IsEnabled="{Binding AddRowCommand}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Calculate" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,5,0" FontSize="12" FontWeight="bold"/>
                        <Image Source="../Images/Calculator.png"
                               Height="25" Width="36"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
