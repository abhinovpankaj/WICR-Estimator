                                <materialDesign:PackIcon Foreground="{StaticResource AccentColorBrush}"
                                                     
                                                     VerticalAlignment="Center"
                                                     Margin="5"
                                Kind="CreateOutline"/>
                                <TextBlock Text="Create Estimate" Margin="10"/>
                            </StackPanel>
                       
                        
