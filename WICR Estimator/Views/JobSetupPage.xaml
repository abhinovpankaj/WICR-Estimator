<UserControl x:Class="WICR_Estimator.Views.JobSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WICR_Estimator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="700"
      >
    <UserControl.Resources>
        <Style x:Key="FieldHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0,5,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>

        </Style>
    </UserControl.Resources>
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="Black"
                Background="AliceBlue"
                Margin="10"
                Padding="0,0,0,15">
            <StackPanel HorizontalAlignment="Stretch" Margin="5">
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Weather Wear Type"
                           Visibility="{Binding ShowWeatherWearDD}"/>
                <ComboBox Text="{Binding WeatherWearType}" Visibility="{Binding ShowWeatherWearDD}" >
                    <ComboBoxItem Content="Weather Wear"/>
                    <ComboBoxItem Content="Weather Wear Rehab"/>
                </ComboBox>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Material"/>
                <ComboBox Text="{Binding MaterialName}">
                    <ComboBoxItem Content="Copper"/>
                    <ComboBoxItem Content="Regular Steel"/>
                    <ComboBoxItem Content="Stainless Steel"/>
                </ComboBox>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Vendor Name"/>
                <ComboBox Text="{Binding VendorName,UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Content="Chivon"/>
                    <ComboBoxItem Content="Thunder Bird"/>
                </ComboBox>
                <StackPanel Orientation="Horizontal" Background="LightGray"
                            Margin="0,30,0,0" Visibility="Hidden"
                            >
                    <TextBlock Text="Labor Rate" 
                           Style="{StaticResource FieldHeader}">
                    </TextBlock>
                    <TextBlock Text="{Binding LaborRate}" 
                               IsEnabled="False"
                               FontWeight="SemiBold"
                               
                               Style="{StaticResource FieldHeader}">
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            

        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Grid.Column="1"
                Background="AliceBlue"
                Margin="10"
                Padding="0,0,0,15">
            <StackPanel>
            <StackPanel>
                <CheckBox Style="{StaticResource CheckBoxStyle}"
                          IsChecked="{Binding IsApprovedForSandCement}"
                          Content="Approved for Sand &amp; Cement?"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           Content="Prevailing Wages"
                           IsChecked="{Binding IsPrevalingWage}"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding IsFlashingRequired}"
                           Content="Metal Flashing?"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding HasSpecialPricing}"
                       Content="Special Material Pricing"/>
                <CheckBox  Style="{StaticResource CheckBoxStyle}"
                           IsChecked="{Binding HasDiscount}"
                       Content="Discount?"/>
            </StackPanel>
                <Border BorderBrush="Black"
                        BorderThickness="0,1,0,0">
                    <StackPanel VerticalAlignment="Center"
                   Grid.Row="4" Grid.Column="1"
                   Margin="5">
                        <TextBlock Text="Stair Width" HorizontalAlignment="Center"
                           Style="{StaticResource FieldHeader}"/>
                        <TextBox Text="{Binding ElementName=slWidth,
                Path=Value, UpdateSourceTrigger=PropertyChanged}"
                     TextAlignment="Right"
                     Width="40" 
                         HorizontalAlignment="Center"
                     Margin="5"/>
                        <Slider Maximum="10" Value="{Binding StairWidth}"
                    TickPlacement="BottomRight"
                    TickFrequency=".5" IsSnapToTickEnabled="True" Name="slWidth"
                    />
                    </StackPanel>
                </Border>
            
            </StackPanel>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"
                Background="AliceBlue"
                Grid.Column="2"
                Margin="10"
                Padding="0,0,0,15">
            <StackPanel>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="Total Sq Ft"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding TotalSqft}"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="{Binding DeckLabel}"
                           />
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding DeckPerimeter }"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="# Risers (3.5-4 FT Wide)"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding RiserCount}"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="# Decks"/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding DeckCount}"/>
                <TextBlock Style="{StaticResource FieldHeader}"
                       Text="MarkUp % "/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding MarkupPercentage}"/>
            </StackPanel>   
        </Border>
              
        
        <!--<StackPanel Orientation="Horizontal"
                    Grid.Row="5" Grid.Column="2"
                    HorizontalAlignment="Right">
            <Button Style="{DynamicResource NavigateButton}"
                    Margin="10,0,10,0"
                    Height="40"
                    Click="Button_Click">
                <Image Source="/Images/rightArrow.png" />
            </Button>
        </StackPanel>-->
        
    </Grid>
</UserControl>
