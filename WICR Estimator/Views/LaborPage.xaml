<UserControl x:Class="WICR_Estimator.Views.LaborPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WICR_Estimator.Views"
              xmlns:conv="clr-namespace:WICR_Estimator.Converters"
             mc:Ignorable="d" 
              d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>

        <conv:CheckBoxVisibilityConverter x:Key="checkBoxConv"/>
        <conv:EnableTextboxConverter x:Key="textboxConv"/>
        <conv:QtyTextboxConverter x:Key="qtyTextboxConv"/>
        <Style TargetType="Label" x:Key="LabelStyle1">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TextBlockStyle1">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment"  Value="Right"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment"  Value="Center"/>
            <!--<Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness"  Value="1"/>-->
        </Style>
        <Style x:Key="cbTB" TargetType="{x:Type CheckBox}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=qtyTb, Path=IsEnabled}" Value="True">
                    <Setter Property="CheckBox.IsChecked" Value="True"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".7*"/>
            <ColumnDefinition Width=".3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" 
                  HorizontalAlignment="Left"
                  Name="MaterialGrid" 
                  Margin="10,0,0,0"
                  VerticalAlignment="Top" 
                  CanUserAddRows="False"
                  ItemsSource="{Binding SystemMaterials,UpdateSourceTrigger=PropertyChanged}"  >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Command="{Binding DataContext.CheckboxCommand,ElementName=MaterialGrid}"
                                      CommandParameter="{Binding Name}"
                                      IsChecked="{Binding IsMaterialChecked,
                                UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False">

                            </CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="System Material">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Name}"
                                     IsReadOnly="True"
                                     KeyboardNavigation.IsTabStop="False"
                                     >
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Operation">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Operation,UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="False"
                                     KeyboardNavigation.IsTabStop="False"
                            >
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Sqft V">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding SMSqftV,UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"
                                     KeyboardNavigation.IsTabStop="False">
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding VerticleProductionRate,UpdateSourceTrigger=PropertyChanged}"
                                    IsReadOnly="True"
                                    KeyboardNavigation.IsTabStop="False">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="P/Rate V" 
                                   TextWrapping="Wrap"  Width="Auto"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Sqft H">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding SMSqftH,
                                UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True" Width="Auto"
                                     KeyboardNavigation.IsTabStop="False">
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding HorizontalProductionRate,UpdateSourceTrigger=PropertyChanged}"
                                    IsReadOnly="True"
                                    KeyboardNavigation.IsTabStop="False">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="P/Rate H" 
                                   TextWrapping="Wrap"  Width="Auto"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Sqft Stairs">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding StairSqft,UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"
                                     KeyboardNavigation.IsTabStop="False">
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding StairsProductionRate,UpdateSourceTrigger=PropertyChanged}"
                                    IsReadOnly="True" Visibility="Visible"
                                    KeyboardNavigation.IsTabStop="False">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="P/R Stairs" 
                                   TextWrapping="Wrap"  Width="Auto"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="#Hours">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Hours,UpdateSourceTrigger=PropertyChanged}"
                                     Name="HoursTb"
                                     KeyboardNavigation.IsTabStop="{Binding Path=Name,Converter={StaticResource qtyTextboxConv}}"
                                    IsEnabled="{Binding Path=Name,Converter={StaticResource qtyTextboxConv}}"/>
                        </DataTemplate>

                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="SetUp Min Charges" Binding="{Binding SetupMinCharge,UpdateSourceTrigger=PropertyChanged,StringFormat='c'}"
                                    IsReadOnly="True"
                                    KeyboardNavigation.IsTabStop="False">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Labor Unit Price"
                                    Binding="{Binding LaborUnitPrice,                   
                    UpdateSourceTrigger=PropertyChanged,StringFormat='c' }"
                                    IsReadOnly="True"
                                    KeyboardNavigation.IsTabStop="False">

                </DataGridTextColumn>


                <DataGridTextColumn Header ="Labor Extension"
                                    Binding="{Binding LaborExtension,
                    UpdateSourceTrigger=PropertyChanged ,StringFormat='c'}"
                                    IsReadOnly="True"
                                    KeyboardNavigation.IsTabStop="False">
                </DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <GroupBox x:Name="OtherCost" Grid.Column="1"
                  Header="Other Cost" Foreground="Maroon"
                  FontFamily="Arial"
                  FontSize="12"
                  FontWeight="Bold"
                  BorderBrush="DarkBlue"
                  BorderThickness="0.5" >
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            Background="FloralWhite" >
                    <Label Content="Total ($) :"                         
                       Margin="5"
                       Style="{StaticResource LabelStyle1}"
                           FontSize="12"
                           Background="FloralWhite"/>

                    <TextBox x:Name="TotalOCExtension"
                         IsEnabled="False"                        
                         Margin="5"                       
                         Height="25"  Width="100"  Style="{StaticResource TextBoxStyle}"                
                         Text="{Binding TotalOCLaborExtension, UpdateSourceTrigger=PropertyChanged,StringFormat='c'}"/>
                    <Button Command="{Binding CalculateCostCommand}"                   
                    Height="35" Margin="40,5,0,5"
                    Background="White"
                    HorizontalAlignment="right"
                     Grid.Row="3" Grid.Column="3">

                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Calculate" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,5,0" FontSize="12" FontWeight="bold"/>
                                <Image Source="../Images/Calculator.png"
                               Height="25" Width="36"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <DataGrid AutoGenerateColumns="False"
                          HorizontalAlignment="Left"
                      Name="OtherCostGrid" 
                          VerticalAlignment="Top"
                      Margin="5,10,10,10"
                      Grid.Column="1"
                          
                      CanUserAddRows="false"                      
                  ItemsSource="{Binding OtherLaborMaterials,UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Items" 
                                    IsReadOnly="{Binding IsReadOnly}"
                                    Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Unit"
                                    Binding="{Binding Quantity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Labor Unit Price ($)"
                                    Binding="{Binding MaterialPrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:C}}"/>
                        <DataGridTextColumn Header="Labor Price($)" 
                                        IsReadOnly="True"
                                        Binding="{Binding Extension,Mode=OneWay,UpdateSourceTrigger=PropertyChanged ,StringFormat={}{0:C}}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </StackPanel>
        </GroupBox>
        <Grid Grid.Row="1" x:Name="TotalHrsSection">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Total hours"
                       Style="{StaticResource LabelStyle1}"/>
                <Label Content="System hours" Grid.Row="1"
                       Style="{StaticResource LabelStyle1}"/>
                <Label Content="Metal hours" Grid.Row="2"
                       Style="{StaticResource LabelStyle1}"/>
                <Label Content="Sloping hours" Grid.Row="3"
                       Style="{StaticResource LabelStyle1}"/>
                <Label Content="Freight hours" Grid.Row="4"
                       Style="{StaticResource LabelStyle1}"/>
                <Label Content="Drive hours" Grid.Row="5"
                       Style="{StaticResource LabelStyle1}"/>
                <Border BorderThickness="0,2,0,0" Margin="2,2,2,10"
                        BorderBrush="Black" Grid.Row="6"
                        Grid.ColumnSpan="2"/>
                <Label Content="Total Setup Time" Grid.Row="7"
                   Style="{StaticResource LabelStyle1}"/>
                <Label Content="Total Labor Unit Price" Grid.Row="8"
                   Style="{StaticResource LabelStyle1}"/>
                <Label Content="Labor Extension" Grid.Row="9"
                   Style="{StaticResource LabelStyle1}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100"
                         FontSize="14"               
                         Text="{Binding TotalHrsLabor, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="1"
                          FontSize="14"              
                         Text="{Binding TotalHrsSystemLabor,
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="2"
                           FontSize="14"              
                         Text="{Binding TotalHrsMetalLabor,
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="3"
                          FontSize="14"              
                         Text="{Binding TotalHrsSlopeLabor, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="4"
                         FontSize="14"                
                         Text="{Binding TotalHrsFreightLabor, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="5"
                         FontSize="14"                
                         Text="{Binding TotalHrsDriveLabor, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="7"
                           FontSize="14"            
                         Text="{Binding TotalSetupTimeLabor, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="8"
                           FontSize="14"              
                         Text="{Binding TotalLaborUnitPrice, UpdateSourceTrigger=PropertyChanged,StringFormat='c'}"/>
                <TextBlock IsEnabled="False"                        
                         Margin="5" Grid.Column="1"                      
                         Width="100" Grid.Row="9"
                           FontSize="14"             
                         Text="{Binding TotalLaborExtension, UpdateSourceTrigger=PropertyChanged,StringFormat='c'}"/>
            </Grid>
