                           FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding RockPockets ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Labor for 3 FT Strip of Paraseal at Foundaton or Other Areas (LF)" Margin="5,2"
                           FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding ParasealFoundation ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Rear/Mid Lagging LF of beam" Margin="5,2"
                           FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding RearMidLagging ,UpdateSourceTrigger=PropertyChanged}"/>
                            <CheckBox 
                          IsChecked="{Binding SuperStopAtFooting,
                    UpdateSourceTrigger=PropertyChanged}"
                          Content="Super Stop at Footing?"/>
                        </StackPanel>

                        <!--</Border>-->
                    </materialDesign:Card>
                    
                    <!--<Border x:Name="Section201" BorderThickness="1" BorderBrush="Black"
                            Background="AliceBlue"
                            Margin="10"
