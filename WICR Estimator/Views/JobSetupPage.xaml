                                Width="250" 
                    TickPlacement="BottomRight"
                    TickFrequency=".5" IsSnapToTickEnabled="True" Name="slWidth"
                    />
                        </StackPanel>
                        <!--</Border>-->
                    </materialDesign:Card>
