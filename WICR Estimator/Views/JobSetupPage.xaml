                                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding TotalSqftVertical,UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <TextBlock FontWeight="SemiBold" Margin="5,2"
                           Visibility="{Binding IslinearCopingFootageVisible}"
                       Text="{Binding LinearFootageText}"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Visibility="{Binding IslinearCopingFootageVisible}"
                         Text="{Binding LinearCopingFootage,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock FontWeight="SemiBold" Margin="5,2"
                       Text="{Binding DeckLabel}"
                           />
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding DeckPerimeter ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock FontWeight="SemiBold" Margin="5,2"
                       Text="{Binding StairRiserText}"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding RiserCount,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock FontWeight="SemiBold" Margin="5,2"
                       Text="{Binding DeckCountText}"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding DeckCount,UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    <!--<TextBlock FontWeight="SemiBold"
                       Text="Mark Up % "/>
                <TextBox Style="{StaticResource TextBoxStyle}"
                         Text="{Binding MarkupPercentage}"/>-->
                    <materialDesign:Card UniformCornerRadius="5" Width="300"
                             Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <StackPanel VerticalAlignment="Center"
                   
                   Margin="5">
                            <TextBlock Text="Mark Up %" HorizontalAlignment="Left" Margin="5,2"
                           FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding ElementName=markup,
                             Path=Value, UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Center"
                             Width="50" 
                             Style="{StaticResource TextBoxStyle}"
                             HorizontalAlignment="Left"
                             Margin="5"/>
                                <Slider Value="{Binding MarkupPercentage}" Maximum="100"
                            Width="250" x:Name="markup" Style="{StaticResource MaterialDesignDiscreteSlider}"
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Minimum="{Binding MinMarkUp}"
                            LargeChange="5"
                            SmallChange="0.5"
                            TickPlacement="BottomRight"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            />
                            </StackPanel>
                            
                        </StackPanel>
                    </materialDesign:Card>
                    <CheckBox Content="Enter less than (-10%)"
                          Margin="10,5" x:Name="cbpasswordSection"
                          Foreground="#FF2A6DCD"
                          IsChecked="{Binding AllowMoreMarkUp}">
                        </CheckBox>
                        <materialDesign:Card UniformCornerRadius="5" Padding="10" 
                                         Margin="10,5" materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                         Visibility="{Binding HidePasswordSection}" >

                            <StackPanel>
                                <TextBlock Text="{Binding LoginMessage}"
                           Margin="10,0,0,0" Foreground="Red"/>
