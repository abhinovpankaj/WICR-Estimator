                        </TextBlock>
                        <TextBlock Text="{Binding LaborRate}" 
                               IsEnabled="False"
                               FontWeight="SemiBold"                             
                              >
                        </TextBlock>

                    </StackPanel>
                </StackPanel>


            <!--</Border>-->
        </materialDesign:Card>

