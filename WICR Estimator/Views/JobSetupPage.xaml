                            Visibility="{Binding Is201SectionVisible}">-->
                    <materialDesign:Card UniformCornerRadius="5" Padding="10" Visibility="{Binding Is201SectionVisible}"
                                         Margin="10,5" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                        <StackPanel>
                            <TextBlock Text="Term Bar (LF)" Margin="5,2"
                                        FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding TermBarLF ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Rebar Prep @ Walls (LF)" Margin="5,2"
                                       FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding RebarPrepWallsLF ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Superstop (LF)" Margin="5,2"
                                       FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding SuperStopLF ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Penetrations" Margin="5,2"
                                       FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding Penetrations ,UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>

                        <!--</Border>-->
                    </materialDesign:Card>
                    <materialDesign:Card UniformCornerRadius="5" Padding="10" Visibility="{Binding Is860SectionVisible}"
                                         Margin="10,5" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                        <!--<Border x:Name="Section860" BorderThickness="1" BorderBrush="Black"
                            Background="AliceBlue"
                            Margin="10"
                            Padding="0,0,0,15"
                            Visibility="{Binding Is860SectionVisible}">-->
                        <StackPanel>
                            <TextBlock Text="Additional Term Bar (LF)" Margin="5,2"
                                        FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding TermBarLF ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Inside and Outside Corner Details (LF)" Margin="5,2"
                                       FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding InsideOutsideCornerDetails ,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Penetrations" Margin="5,2"
                                       FontWeight="SemiBold"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding Penetrations ,UpdateSourceTrigger=PropertyChanged}"/>
                            <CheckBox 
                                      IsChecked="{Binding SuperStopAtFooting,
                                      UpdateSourceTrigger=PropertyChanged}"
                                      Content="Super Stop at Footing?"/>
                        </StackPanel>

                        <!--</Border>-->
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
            <!--</Border>-->
        </materialDesign:Card>

        <materialDesign:Card UniformCornerRadius="5" Width="350"
                             Grid.Column="2"
                             Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <!--<Border BorderThickness="0" BorderBrush="Black"
                Background="AliceBlue"
                Grid.Column="2"
                Margin="10"
                Padding="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#82000000" />
            </Border.Effect>-->
            
                <ScrollViewer VerticalScrollBarVisibility="Auto" >
                
                    <StackPanel>
                    <materialDesign:Card UniformCornerRadius="5" Width="300"
                             Margin="10" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Margin="5,2"
                       Text="Actual Prevailing Wage"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
                          IsEnabled="{Binding IsPrevalingWage}"
                         Text="{Binding ActualPrevailingWage,
                    UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock FontWeight="SemiBold" Margin="5,2"
                       Text="Total Sq Ft Plywood"
                           Visibility="{Binding IsPlywoodSqftVisible}"/>
                            <TextBox Style="{StaticResource TextBoxStyle}"
