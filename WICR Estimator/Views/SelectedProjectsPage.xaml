<UserControl x:Class="WICR_Estimator.Views.SelectedProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WICR_Estimator.Views"
      xmlns:conv="clr-namespace:WICR_Estimator.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="700"
      >
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid>
        <TabControl ItemsSource="{Binding EnabledProjects}" SelectedIndex="0" >
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name, Mode=OneWay}" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TabControl TabStripPlacement="Left"
                                     >
                            <TabItem Header="Job Setup" Background="LightBlue">
                                <TabItem.Content>
                                    <Grid Margin="0,0,0,0" Background="LightBlue"
                                          DataContext="{Binding ProjectJobSetUp}">
                                        <local:JobSetupPage/>
                                    </Grid>
                                </TabItem.Content>
                            </TabItem>
                            <TabItem Header="Metal"
                                 VerticalAlignment="Bottom">
                                <TabItem.Content>
                                    <Grid Margin="0,0,0,0" 
                                      Background="LightBlue"
                                          DataContext="{Binding MetalViewModel}">
                                        <local:MetalPage/>
                                    </Grid>
                                </TabItem.Content>
                            </TabItem>
                            <TabItem Header="Slope"
                                 VerticalAlignment="Bottom">
                                <TabItem.Content>
                                    <Grid Margin="0,0,0,0" 
                                      Background="LightBlue" 
                                          DataContext="{Binding SlopeViewModel}">
                                        <local:SlopePage/>
                                    </Grid>
                                </TabItem.Content>
                            </TabItem>
                            <TabItem Header="Material"
                                 VerticalAlignment="Bottom">
                                <TabItem.Content>
                                    <Grid Margin="0,0,0,0" 
                                      Background="LightBlue" 
                                          DataContext="{Binding MaterialViewModel}">
                                        <local:SystemMaterialPage/>
                                    </Grid>
                                </TabItem.Content>
                            </TabItem>
                            <TabItem Header="Labor"
                                 VerticalAlignment="Bottom">
                                <TabItem.Content>
                                    <Grid Margin="0,0,0,0" 
                                      Background="LightBlue" 
                                          DataContext="{Binding MaterialViewModel}">
                                        <local:LaborPage/>
                                    </Grid>
                                </TabItem.Content>
                            </TabItem>
                            <TabItem Header="Calculation Details"
                                 VerticalAlignment="Bottom">
                                <TabItem.Content>
                                    <Grid Margin="0,0,0,0" 
                                      Background="LightBlue" 
                                          DataContext="{Binding MaterialViewModel}">
                                        <local:CalculationDetailsPage/>
                                    </Grid>
                                </TabItem.Content>
                            </TabItem>
                        </TabControl>
                    </DockPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
 
</UserControl>
